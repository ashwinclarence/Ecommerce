<style>
    .admin-offer-container {
        min-height: 100vh;
    }

    .offer-row {
        display: flex;
        justify-content: space-between;
    }
</style>


<%- include('navbar') %>

    <div class="admin-offer-container container mt-5">
        <div class="offer-row">
            <h3 class="text-secondary">Offers</h3>
            <button type="button" class="btn btn-success" data-bs-toggle="modal"
                data-bs-target=".add-new-coupon-modal">Add offer <i class="fa-solid fa-plus"></i></button>

        </div>

        <!-- table shows the available offers -->
        <div class="mt-5 table-responsive">
            <table class="table text-center">
                <thead class="table-primary">
                    <tr>
                        <th scope="col" class="text-center py-3">sl.no</th>
                        <th scope="col" class="py-3 ">Coupon Name</th>
                        <th scope="col" class="py-3">Coupon code</th>
                        <th scope="col" class="py-3">Discount amount</th>
                        <th scope="col" class="py-3">Minimum purchase</th>
                        <th scope="col" class="py-3">Added date</th>
                        <th scope="col" class="py-3">Expiring date</th>
                        <th scope="col" class="text-center py-3">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(offer.length!=0){ %>
                        <% offer.forEach((offer,index)=>{ %>
                            <tr>
                                <th scope="row" class="text-center">
                                    <%= index+1 %>
                                </th>
                                <td class="count-name">
                                    <%= offer %>
                                </td>
                                <td>
                                    <%= offer.offerCode %>
                                </td>
                                <td>&#8377;</i>
                                    <%= offer.discount %>
                                </td>
                                <td>&#8377;</i>
                                    <%= offer.minAmount %>
                                </td>
                                <td>
                                    <%= offer.createdAt.toDateString() %>
                                </td>
                                <td>
                                    <%= offer.expiryDate.toDateString() %>
                                </td>
                                <td class="text-center">
                                    <button class="btn btn-danger">Delete</button>

                                </td>
                            </tr>

                            <% }) %>
                                <% }else{ %>
                                    <tr>
                                        <th colspan="8" class="p-5 text-secondary">No offers added yet </th>
                                    </tr>
                                    <% } %>

                </tbody>
            </table>
        </div>
    </div>


    <%- include('footer') %>


<!-- Modal for adding new offer -->
<div class="modal fade add-new-coupon-modal" tabindex="-1" role="dialog" aria-labelledby="addOfferModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content p-5">
            <div class="form-header text-center mb-4">
                <h2>Add Offer</h2>
            </div>
            <form action="/admin/add-coupon" method="post" id="add-coupon-form">
                <div class="mb-3">
                    <label for="offer-target" class="form-label">Offer Target</label>
                    <select class="form-select" id="offer-target" name="offerTarget">
                        <option selected disabled>Select offer target</option>
                        <option value="category">Category</option>
                        <option value="product">Product</option>
                    </select>
                    <label for="offer-target" class="validateOffer"></label>
                </div>

                <div class="mb-3" id="category-offer-group" style="display: none;">
                    <label for="category-offer" class="form-label">Category Offer</label>
                    <select class="form-select" id="category-offer" name="categoryOffer">
                        <option selected disabled>Select category</option>
                        <% category.forEach((category) => { %>
                            <option value="<%= category.id %>"><%= category.categoryName %></option>
                        <% }) %>
                    </select>
                    <label for="category-offer" class="validateOffer"></label>
                </div>

                <div class="mb-3" id="product-offer-group" style="display: none;">
                    <label for="product-offer" class="form-label">Product Offer</label>
                    <select class="form-select" id="product-offer" name="productOffer">
                        <option selected disabled>Select product</option>
                        <% product.forEach((product) => { %>
                            <option value="<%= product.id %>"><%= product.productName %></option>
                        <% }) %>
                    </select>
                    <label for="product-offer" class="validateOffer"></label>
                </div>

                <div class="mb-3">
                    <label for="discountAmount" class="form-label">Discount Percentage</label>
                    <input type="number" class="form-control" id="discountAmount" name="discountAmount" min="0" max="100">
                    <label for="discountAmount" class="validateOffer"></label>
                </div>

                <div class="mb-3">
                    <label for="expiryDate" class="form-label">Expiry Date</label>
                    <input type="date" class="form-control" id="expiryDate" name="expiryDate">
                    <label for="expiryDate" class="validateOffer"></label>
                </div>

                <div class="text-center">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>


<script>
        const offerTarget = document.getElementById('offer-target');
        const categoryOfferGroup = document.getElementById('category-offer-group');
        const productOfferGroup = document.getElementById('product-offer-group');

        offerTarget.addEventListener('change', function () {
            if (this.value === 'category') {
                categoryOfferGroup.style.display = 'block';
                productOfferGroup.style.display = 'none';
            } else if (this.value === 'product') {
                categoryOfferGroup.style.display = 'none';
                productOfferGroup.style.display = 'block';
            }
        });
</script>

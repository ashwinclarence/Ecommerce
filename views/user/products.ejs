<style>
    .products-container {
        padding: 2rem 0;
        margin-bottom: 5rem;
        display: flex;
        flex-direction: column;
        gap: 5rem;
    }


    .products-list-box {
        display: flex;
        flex-direction: row;
        gap: 1rem;
        flex-wrap: wrap;
        justify-content: space-around;
    }

    .product-box {
        text-decoration: none;
        color: #000000;
        border: 1px solid #b2b2b2;
        border-radius: 10px;
        width: 300px;
        padding: 1rem;
        margin-top: 2rem;
        overflow: hidden;
        text-overflow: ellipsis;
        position: relative;
    }

    .product-image-box {
        height: 290px;
        width: 290px;
        position: relative;
    }

    .product-image-box img {
        margin: auto;
        width: 250px;
        height: 290px;
        object-fit: scale-down;
    }

    .product-text-row {
        max-width: 250px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .product-discount-box {
        position: absolute;
        top: 0;
        left: 0;
        padding: 0 2rem;
        color: #ffffff;
        background-color: red;
        border-radius: 5px 0;
    }

    .product-new-arrival-box {
        position: absolute;
        top: 0;
        left: 0;
        padding: 0 2rem;
        color: #ffffff;
        background-color: rgb(50, 195, 50);
        border-radius: 5px 0;
    }

    .product-price {
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: .5rem;
    }

    .product-star-rating {
        position: absolute;
        bottom: 0;
        right: 1rem;
    }

    .product-star-icon {
        color: orange;
    }

    .product-availability {
        position: absolute;
        top: 50%;
        left: 0;
        width: 100%;
        background-color: rgba(255, 255, 255, 0.499);
        padding: 1rem 0;
        font-size: 1.2rem;
        font-weight: 700;
        color: red;
        text-align: center;
        z-index: 200;
    }

    .no-product-banner {
        /* background-color: red; */
        background: url("../../image/noproduct.jpg");
        background-position: center;
        background-size: contain;
        background-repeat: no-repeat;
        height: 50vh;
        width: 100%;
    }
</style>

<div class="products-container">

    <div class="products-list-box container">

        <!-- check if any product exist -->
        <% if(products.length!=0){ %>
            <!-- this will render each product on the product collection which is not blocked -->
            <% products.forEach((product)=>{ %>

                <!-- this is the product container and when it is clicked it redirect to product detail page -->
                <a href="/user/product-view/<%= product.id %>" class="product-box">

                    <!-- if product discount is available then it is shown as a banner in product top  -->
                    <% if(product.productDiscount!=0){ %>
                        <div class="product-discount-box">
                            <h6>
                                <%= product.productDiscount %>&percnt; OFF
                            </h6>
                        </div>

                        <!-- if the product is added which one day then new arrival banner is shown on top of the product box -->
                        <% }else if (new Date(product.addedOn).getTime()> (Date.now() - (1 * 24 * 60 * 60 * 1000))){ %>
                            <div class="product-new-arrival-box">
                                <h6>New Arrival</h6>
                            </div>
                            <% } %>

                                <!-- image of product which is stored in uploads folder -->
                                <div class="product-image-box">
                                    <img src="/<%= product.productImage[0] %>" loading="lazy">

                                    <!-- product review -->
                                    <h6 class="product-star-rating">4.5 <span class="product-star-icon">&starf;</span>
                                    </h6>
                                </div>
                                <!-- product description with text overflow as ... -->
                                <div class="product-description-box">
                                    <h6 class="product-text-row">
                                        <%= product.productBrand %>
                                    </h6>
                                    <p class="product-name product-text-row">
                                        <%= product.productName %>
                                    </p>
                                    <h5 class="product-price"><i
                                            class="fa-solid fa-indian-rupee-sign product-text-row"></i>
                                        <%= product.productPrice.toLocaleString() %>
                                    </h5>

                                    <!-- product availability -->
                                    <% if(product.productQuantity<=0){ %>
                                        <h6 class="product-availability">Product Out of stock</h6>
                                        <% } %>
                                </div>
                </a>

                <% }) %>
                    <% }else{ %>
                        <div class="no-product-banner">
                        </div>
                        <% } %>







    </div>
    <%- include("pagination")%>
</div>